<!-- Modal Register -->
<div id="register" class="modal fade">
	<div class="modal-dialog modal-xl modal-dialog-centered w-90 w-md-75">
		<div class="modal-content bg-dark rounded-3 shadow-lg">
			<div class="row my-auto align-content-center px-3">
				<div class="container">
					<div class="row mt-3">
						<div class="col-2"></div>
						<div class="col d-flex justify-content-center">
							<h4 class="text-light p-0 mt-2">
								<span class="p-0 lang" data-lang="es">Registros de personal</span>
								<span class="p-0 lang" data-lang="en">Personnel records</span>
							</h4>
						</div>
						<div class="col-2 d-flex justify-content-center align-content-center">
							<button type="button" class="btn btn-outline-light my-auto d-flex close-modal" data-bs-dismiss="modal" aria-label="Close">
								<i class="fa-solid fa-xmark fs-5 my-auto"></i>
							</button>
						</div>
					</div>
				</div>
				<div class="d-flex flex-nowrap text-light justify-content-center text-decoration-underline">
					<p class="lang" data-lang="es">Los campos obligatorios aparecen marcados con un </p>
					<p class="lang" data-lang="en">Required fields are marked with a </p>
					<span class="text-danger ps-2"><i class="fa-solid fa-asterisk"></i></span>
				</div>
				<div class="card-body">
					<form method="POST" name="manual-reg" id="manual-reg" autocomplete="off">
						<div class="row">
							<div class="reg-field mb-3 col-md-4 col-12 find-user">
								<div class="form-floating">
									<input class="form-control dynamic-hint mandatory find-user" data-hint-collection="user_info" name="_id" id="new_id"
										type="number" placeholder="0" min="0" max="9999" disabled />
									<label for="new_id">
										<span class="lang" data-lang="es">Código de usuario</span>
										<span class="lang" data-lang="en">User code</span>(ID)
										<span class="text-danger"><i class="fa-solid fa-asterisk"></i></span>
									</label>
								</div>
							</div>
							<div class="reg-field mb-3 col-md-8 col-12 find-user">
								<div class="form-floating mb-3 mb-md-0">
									<input class="form-control dynamic-hint mandatory find-user" data-hint-collection="user_info" autocomplete="new-password"
										name="name" id="name" type="text" placeholder="." maxlength="30" disabled />
									<label for="name">
										<span class="lang" data-lang="es">Nombre</span>
										<span class="lang" data-lang="en">Name</span>
										<span class="text-danger"><i class="fa-solid fa-asterisk"></i></span>
									</label>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="reg-field mb-3 col-md-6 col-12">
								<div class="form-floating mb-3 mb-md-0">
									<select class="form-control form-select ps-4 mandatory" name="area" id="area" disabled>
										<option id="area-def" value="0" class="lang" data-lang="es" selected>
											- Selecciona área -
										</option>
										<option id="area-def" value="0" class="lang" data-lang="en" selected>
											- Select area -
										</option>
										<% /*for(let data in area) { %>
											<option class="area-opt" value="<%= area[data]['n'] %>"><%= area[data]['desc'] %></option>
										<% }*/ %>
									</select>
									<label for="area">
										<span class="lang" data-lang="es">Área de Adscripción</span>
										<span class="lang" data-lang="en">Adscription area</span>
										<span class="text-danger"><i class="fa-solid fa-asterisk"></i></span>
									</label>
								</div>
							</div>
							<div class="reg-field mb-3 col-md-6 col-12">
								<div class="form-floating mb-3 mb-md-0">
									<select class="form-control form-select ps-4 mandatory" name="direction" id="direction" disabled>
										<option id="dir-def" value="0" class="lang" data-lang="es" selected>
											- Selecciona dirección -
										</option>
										<option id="dir-def" value="0" class="lang" data-lang="en" selected>
											- Select direction -
										</option>
										<% /*for(let data in depa) { %>
											<option class="dir-opt" data-area="<%= depa[data]['area'] %>" value="<%= depa[data]['n'] %>"><%= depa[data]['desc'] %></option>
										<% }*/ %>
									</select>
									<label for="direction">
										<span class="lang" data-lang="es">Dirección / Subdirección</span>
										<span class="lang" data-lang="en">Direction / Sub-direction</span>
										<span class="text-danger"><i class="fa-solid fa-asterisk"></i></span>
									</label>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="reg-field mb-3 col-md-6 col-12">
								<div class="form-floating">
									<select class="form-control form-select ps-4 mandatory" name="position" id="position" disabled>
										<option id="pos-def" value="0" class="lang" data-lang="es" selected>
											- Selecciona puesto -
										</option>
										<option id="pos-def" value="0" class="lang" data-lang="en" selected>
											- Select position -
										</option>
										<% /*for(let data in care) { %>
											<option class="pos-opt" data-depa="<%= care[data]['department'] %>" value="<%= care[data]['n'] %>"><%= care[data]['desc'] %></option>
										<% }*/ %>
									</select>
									<label for="position">
										<span class="lang" data-lang="es">Puesto</span>
										<span class="lang" data-lang="en">Position</span>
										<span class="text-danger"><i class="fa-solid fa-asterisk"></i></span>
									</label>
								</div>
							</div>

							<div class="reg-field mb-3 col-md-6 col-12">
								<div class="form-floating">
									<select class="form-control form-select ps-4 mandatory" name="category" id="category" disabled>
										<option id="cat-def" value="0" class="lang" data-lang="es" selected>
											- Selecciona categoría -
										</option>
										<option id="cat-def" value="0" class="lang" data-lang="en" selected>
											- Select category -
										</option>
										<option class="cat-opt" value="1">Mando Medio</option>
										<option class="cat-opt" value="2">Administrativo</option>
										<option class="cat-opt" value="3">Docente</option>
									</select>
									<label for="category">
										<span class="lang" data-lang="es">Categoría</span>
										<span class="lang" data-lang="en">Category</span>
										<span class="text-danger"><i class="fa-solid fa-asterisk"></i></span>
									</label>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="reg-field mb-3 col-md-6 col-12 mx-auto">
								<div class="form-floating mb-3 mb-md-0">
									<input class="form-control dynamic-hint mandatory" data-hint="manager" data-hint-collection="user_info"
										name="manager" id="manager" type="text" placeholder="." disabled />
									<label for="manager">
										<span class="lang" data-lang="es">Jefe directo</span>
										<span class="lang" data-lang="en">Manager</span>
										<span class="text-danger"><i class="fa-solid fa-asterisk"></i></span>
									</label>
								</div>
							</div>
						</div>

						<div class="mt-2 mb-0">
							<div class="row mt-3">
								<div class="mb-2 d-flex justify-content-center">
									<div class="form-check">
										<input type="checkbox" class="form-check-input" id="new_user">
										<label class="form-check-label text-light text-decoration-underline" for="new_user">
											<span class="lang" data-lang="es">Nuevo registro como usuario</span>
											<span class="lang" data-lang="en">New registry as user</span>
										</label>
									</div>
									<div class="tooltip-text my-auto d-flex text-light" 
										data-tooltip-es="La persona a registrar podrá acceder a esta aplicación web con las 
											credenciales asignadas (Código y contraseña). La contraseña será generada de forma aleatoria."
										data-tooltip-en="This person will be able to access this web application with the
											assigned credentials (ID and password). The password will be randomly generated.">
										<i class="fa-solid fa-circle-question fs-5 my-auto ms-2"></i>
									</div>
								</div>
								<div class="my-1 mb-2 d-flex justify-content-center">
									<div class="form-check">
										<input type="checkbox" class="form-check-input" id="find_user">
										<label class="form-check-label text-light text-decoration-underline" for="find_user">
											<span class="lang" data-lang="es">Buscar y crear usuario</span>
											<span class="lang" data-lang="en">Find and create user</span>
										</label>
									</div>
									<div class="tooltip-text my-auto d-flex text-light" 
										data-tooltip-es="Se buscara información del empleado (por Nombre o Código), debe estar
											registrado en la base de datos para crear un nuevo usuario del sistema. La contraseña
											será generada de forma aleatoria."
										data-tooltip-en="Employee information (by Name or ID) will be searched, must be registered
											in the database to create a new system user. The password will be randomly generated.">
										<i class="fa-solid fa-circle-question fs-5 my-auto ms-2"></i>
									</div>
								</div>
								<button id="submit-register" class="mx-auto w-50 w-md-25 btn btn-success text-dark fs-5 btn-block"
									type="button" disabled>
									<span class="lang" data-lang="es">Registrar</span>
									<span class="lang" data-lang="en">Register</span>
								</button>
								<p class="p-0 text-light text-center my-4 lang" data-lang="es">O subir un <span data-bs-dismiss="modal" aria-label="Close"
									data-bs-toggle="modal" data-bs-target="#register-file"
									class="text-warning fw-bold cursor-pointer">archivo Excel</span>
								</p>
								<p class="p-0 text-light text-center my-4 lang" data-lang="en">Or upload a <span data-bs-dismiss="modal" aria-label="Close"
									data-bs-toggle="modal" data-bs-target="#register-file"
									class="text-warning fw-bold cursor-pointer">Excel file</span>
								</p>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

