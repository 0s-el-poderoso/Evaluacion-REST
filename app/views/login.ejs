    </div>
    <nav id="layoutNavbar" data-log="<%= (session) ? true : false %>" class="d-none"></nav>

    <div id="load-b" class="bg-light p-0 m-0 mx-auto flex-nowrap position-fixed d-flex show">
        <div class="container h-100 d-flex">
            <div class="m-auto">
                <div class="spinner-border text-info"></div>
            </div>
        </div>
    </div>

    <div id="floatingLogin" class="hide floating">
        <div class="login-box">
            <div class="container d-flex">
                <img src="/img/logo-utna.png" alt="Logo UTNA" class="px-3 w-sm-80 w-md-60 mx-auto img-fluid">
            </div>
            <h2 class="pt-4 pb-3">
                <span class="lang" data-lang="es">Iniciar Sesi칩n</span>
                <span class="lang" data-lang="en">Login</span>
            </h2>
